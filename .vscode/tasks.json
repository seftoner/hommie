{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": "dart",
			"args": [
				"run",
				"build_runner",
				"watch",
				"--delete-conflicting-outputs"
			],
			"group": "build",
			"problemMatcher": [
				"$dart-build_runner"
			],
			"label": "flutter: build_runner watch",
			"detail": "Watch and build generated files"
		},
		{
			"label": "patrol: run tests",
			"type": "shell",
			"command": "patrol",
			"args": [
				"test"
			],
			"group": "test",
			"problemMatcher": [],
			"detail": "Run patrol integration tests"
		},
		{
			"label": "Create Feature Folder",
			"type": "shell",
			"command": "mkdir",
			"args": [
				"-p", // Enables creating nested directories.
				"./app/lib/features/${input:featureName}/domain",
				"./app/lib/features/${input:featureName}/application",
				"./app/lib/features/${input:featureName}/infrastructure",
				"./app/lib/features/${input:featureName}/presentation"
			],
			"problemMatcher": [],
			"detail": "Creates a new feature folder structure under ./app/lib/features."
		}
	],
	"inputs": [
		{
			"id": "featureName",
			"type": "promptString",
			"description": "Enter the name of the feature"
		}
	]
}